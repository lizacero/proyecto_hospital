<h1>CENTRO MEDICO BACKEND</h1>
<h2>LISTADO DE PACIENTES</h2>
<table border="1">
    <thead>
        <tr>
            <th>Nombre del Paciente</th>
            <th>Apellido del Paciente</th>
            <th>Cédula</th>
            <th>Edad</th>
            <th>Teléfono</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each pacientes}}
        <tr>
            <form action="/pacientes/actualizar/{{cedulaP}}" method="post">
                <td><input type="text" id="nombreP" name="nombreP" value="{{nombreP}}" {{#ifCond @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                <td><input type="text" id="apellidoP" name="apellidoP" value="{{apellidoP}}" {{#ifCond @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                <td><input type="text" value="{{cedulaP}}" disabled></td>
                <td><input type="text" id="edad" name="edad" value="{{edad}}" {{#ifCond @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                <td><input type="tel" id="telefono" name="telefono" value="{{telefono}}" {{#ifCond @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                <td>
                {{#if ../estado}}
                <a href="/pacientes/eliminar/{{cedulaP}}">Eliminar</a> <br><br>
                <a href="/pacientes/enviar/{{@key}}">Actualizar</a>
                {{else}}
                <input type="submit" value="Enviar">
                {{/if}}
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>
<a class="volver" href="/">Volver</a>
<a href="pacientes/agregar-paciente">Agregar paciente</a>